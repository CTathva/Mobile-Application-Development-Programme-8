<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="Call and Save Application"
        android:gravity="center"
        android:textSize="25sp"
        android:id="@+id/text_view"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/text_view"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_below="@id/text_view"
        android:layout_marginTop="8dp"
        android:id="@+id/edit_text"
        android:maxLength="10"
        android:layout_margin="8dp"
        android:hint="987654321"
        android:layout_height="wrap_content">
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/edit_text"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_weight="3"
                android:id="@+id/one"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="2"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/two"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="3"   android:layout_weight="3"

                android:id="@+id/three"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="4"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_weight="3"
                android:id="@+id/four"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_weight="3"

                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="5"
                android:id="@+id/five"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="6"
                android:id="@+id/six"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="7"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:id="@+id/seven"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="8"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/eight"
                android:layout_weight="3"

                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="9"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/nine"
                android:layout_weight="3"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="9"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:text="*"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:id="@+id/star"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="0"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"
                android:id="@+id/zero"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="#"
                android:layout_weight="3"
                android:id="@+id/hash"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="9"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/call"
                android:layout_weight="3"
                android:text="call"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            </Button>

            <Button
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:id="@+id/save"
                android:text="Save"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            </Button> <Button
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:id="@+id/delete_btn"
            android:text="DEL"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
        </Button>


        </LinearLayout>





    </LinearLayout>

    </LinearLayout>

</RelativeLayout>